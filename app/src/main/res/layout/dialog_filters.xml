<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/purple_500"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/text_filters"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckBox
                android:id="@+id/all_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:checked="true"
                android:buttonTint="@color/white"
                android:text="@string/text_all"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <CheckBox
                android:id="@+id/one_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/one_year"
                android:buttonTint="@color/white"
                android:checked="true"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@+id/all_check"
                app:layout_constraintTop_toBottomOf="@+id/all_check" />

            <CheckBox
                android:id="@+id/two_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/two_years"
                android:checked="true"
                android:buttonTint="@color/white"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@+id/one_check"
                app:layout_constraintTop_toBottomOf="@+id/one_check" />

            <CheckBox
                android:id="@+id/poltora_hceck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:buttonTint="@color/white"
                android:text="@string/polt_year"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@+id/two_check"
                app:layout_constraintTop_toBottomOf="@+id/two_check" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/filter_button"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingStart="70dp"
                android:paddingEnd="70dp"
                app:cornerRadius="15dp"
                android:backgroundTint="@color/purple_500"
                android:textColor="@color/white"
                app:strokeColor="@color/white"
                app:strokeWidth="1dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/poltora_hceck" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>
